<!DOCTYPE html>
<html>
  <head>
    <title>Todo List App - My Tasks</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
  </head>
  <body>
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="#">Todo List App</a>
    </nav>
    <div class="container mt-4">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center"><%= title %></h1>
        </div>
        <div class="card-body">
          <% for(var i=0;i<todo.length;i++) { %>
          <form action="/delete" method="post">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= todo[i]._id %>">
              <label class="form-check-label"><%= todo[i].name %></label>
            </div>
            <input type="hidden" name="input"value="<%=title%>">
          </form>
          <% } %> 
          <form action="/list" method="post" class="mt-4">
            <div class="form-row align-items-center">
              <div class="col-auto">
                <input type="text" name="todo" class="form-control" placeholder="Add a new task" autocomplete="off">
              </div>
              <div class="col-auto">
                <button type="submit" name="button" value="<%= title %>" class="btn btn-primary">Add</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
